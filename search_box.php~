jQuery(function() {
	$('#navigation a').each(function() {
	  $(this).click(function(e) {
	    var element = $(this).attr('href');
	    $('html').animate({ scrollTop: $(element).offset().top }, 300, null, function() { document.location = element; });
	    e.preventDefault();
	  });
	});
});

